{
  "temp-directory": "coverage/v8",
  "include": [
    "src/**/*.js",
    "src/**/*.cjs",
    "index.cjs"
  ],
  "exclude": [
    "**/*.test.js",
    "test/**",
    "coverage/**",
    ".nyc_output/**",
    "instrumented/**",
    "node_modules/**",
    "**/*.config.js",
    "**/*.config.cjs",
    "forge.config.cjs",
    ".ncurc.cjs"
  ],
  "excludeNodeModules": true,
  "excludeAfterRemap": true,
  "reporter": ["text", "html"],
  "resolve-paths": true
}
